<script>
  import { router } from '/@nue/app-router.js'
  import { nueStateChange } from '/@util/helper.js'
  import L from '/@util/leaflet.js'
</script>

<div @name="maps" :data-theme="router.state.theme || 'system'" id="map">

  <script>
    router = router

    mounted() {
      router.on('theme disabled_hosts resizable', this.update)
      nueStateChange(this.update)

      L.map(this.root, {})
    }
  </script>
</div>
